{
  "manifest_version": 3,
  "name": "TradeEdge Fill Capture",
  "version": "1.0.0",
  "description": "Captures live fills from TradingView and sends them to TradeEdge",
  "permissions": ["storage", "alarms"],
  "host_permissions": [
    "https://www.tradingview.com/*",
    "http://localhost:5050/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.tradingview.com/*"],
      "js": ["content/injector.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://www.tradingview.com/*"],
      "js": ["content/bridge.js"],
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
